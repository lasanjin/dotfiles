#!/bin/bash

read PORT </sys/class/drm/card0/card0-DP-2/status # connected/disconnected

if [ "$PORT" == "connected" ]; then
    . /home/lasanjin/.scripts/blue && blue on
    msg="Monitor connected: bluetooth on"
else
    . /home/lasanjin/.scripts/blue && blue off
    msg="Monitor disconnected: bluetooth off"
fi

sudo -u lasanjin DISPLAY=:0 DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus notify-send $msg

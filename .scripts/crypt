#!/bin/bash

crypt() {
    case "$1" in
    "e")
        ecrypt $2
        ;;
    "d")
        dcrypt $2
        ;;
    *)
        echo -e "crypt [e|d] [FILE]"
        ;;
    esac
}

ecrypt() {
    local fn=$(echo $1 | sed 's/\///g')
    echo ENCRYPTING...
    tar -cz $fn | sudo gpg -q -e -r $pk -o $fn'.gpg' 2>/dev/null

    check $? $1
}

dcrypt() {
    echo DECRYPTING...
    sudo gpg -q --default-key $pk -d $1 2>/dev/null | tar xz

    check $? $1
}

check() {
    if [ $1 -eq 0 ]; then
        echo OK

        read -p "DELETE \"$2\" ? (Y/N): " ans

        case ${ans:0:1} in
        y | Y)
            # use srm (secure-delete) for proper purge
            sudo rm -rf $2
            echo OK
            ;;
        *)
            echo ABORT
            ;;
        esac
    else
        echo FAILED
    fi
}
